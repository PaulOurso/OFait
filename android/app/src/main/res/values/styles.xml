<resources>

    <!-- CardViews -->
    <style name="MyCardViewStyle" parent="CardView.Light">
        <item name="cardCornerRadius">@dimen/border_radius_card</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">#FFFFFF</item>
    </style>

    <style name="CardViewInside" parent="AppTheme.Base">
        <item name="android:background">@drawable/card_border</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>


    <style name="ButtonVote" parent="AppTheme.Base">
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/background_btn_vote</item>
        <item name="android:elevation">2dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="ButtonValide" parent="AppTheme.Base">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorBlueDark</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>
